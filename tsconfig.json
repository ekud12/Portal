{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": "./src",
    "paths": {
      "@userStore": ["app/features/user/store"],
      "@portalStore": ["app/portal/store"],
      "@zakautStore": ["app/features/zakaut/store"],
      "@invoicesStore": ["app/features/invoices/store"],
      "@environment": ["environments/environment"],
      "@http-routes": ["app/core/http/http-routes"]
    }
  }
}
